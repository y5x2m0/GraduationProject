@model List<T8_1.Models.Teacher>
@if (Model.Count() == 0)
{
    <span>暂无数据！</span>
}
else
{
    <table class="table table-hover table-condensed">
        <tr>
            <th>姓名</th>
            <th>登录名</th>
            <th>密码</th>
            <th>电话</th>
            <th>Email</th>
            <th>操作</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TeacherName</td>
                <td>@item.TeacherLoginName</td>
                <td>@item.TeacherLoginPwd</td>
                <td>@item.TeacherPhone</td>
                <td>@item.TeacherEmail</td>
                <td>
                    @Html.ActionLink("修改", "AllDelete", null, new { @class = "btn btn-primary " })
                </td>
                <td>
                    @Html.ActionLink("删除", "AllDelete", null, new { @class = "btn btn-danger " })
                </td>
            </tr>
        }
    </table>
}
