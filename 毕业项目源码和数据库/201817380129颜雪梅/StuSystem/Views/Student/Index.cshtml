
@{
    ViewBag.Title = "Index";
}
@using StuSystem.Models;
@model List<Student>
<h2>学生注册信息查询</h2>
@Html.ActionLink("添加","Register",null,new { @class="btn btn-primary"})
<table class="table table-bordered table-hover table-condensed table-striped" >
    <tr>
        <th>编号</th>
        <th>姓名</th>
        <th>密码</th>
        <th>性别</th>
        <th>班级</th>
        <th>自我介绍</th>
        <th>是否阅读须知</th>
    </tr>
    @* 循环 *@
    @foreach (var item in Model)
    {
<tr>
    <td>@item.StuID</td>
    <td>@item.Name</td>
    <td>@item.Password</td>
    <td>@item.Sex</td>
    <td>@item.Grades1.GradesName</td>
    <td>@item.Intro</td>
    <td>@item.Agreest</td>
</tr>
    }
</table>

