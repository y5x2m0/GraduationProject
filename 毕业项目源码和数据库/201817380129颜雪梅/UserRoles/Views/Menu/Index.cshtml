@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using UserRoles.Models;
@model List<Menus>
<ul class="breadcrumb">
    <li><a href="">首页</a></li>
    <li class="active">菜单管理</li>
</ul>

<div class="row">
    <div class="col-lg-6">
        <a href="/Menu/Add" class="btn btn-primary">添加</a>
    </div>
    <div class="col-lg-4">
        <form action="" method="post" class="form-inline">
            <label for="department">菜单名称：</label>
            <input type="text" name="Name" id="Name" value="@ViewBag.name" class="form-control" placeholder="请输入姓名模糊查询" />
            <input type="submit" value="查询" class="btn btn-primary" />
        </form>
    </div>
</div>

<table class="table table-bordered table-hover table-condensed table-striped">
    <thead>
        <tr>
            <th>编号</th>
            <th>名称</th>
            <th>备注</th>
            <th>Pid</th>
            <th>Url</th>
            <th>修改</th>
            <th>删除</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ID
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Remark
                </td>
                <td>
                    @item.Pid
                </td>
                <td>
                    @item.Url
                </td>
                <td>
                    <a href="/Menu/MenuUpdate/@item.ID">修改</a>
                </td>
                <td>
                    <a href="/Menu/MenuDelete?MenuID=@item.ID" onclick="return confirm('您确定要删除 @item.Name 的菜单信息吗？')">删除</a>
                </td>
            </tr>
        }
</table>
