
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutExam.cshtml";
}
@using UserRoles.Models;
@{ 
    Student s = ViewBag.s;
}
            <h2>学生详情</h2>

            <div>
                <h4>学生信息</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        姓名
                    </dt>

                    <dd>
                        @s.StuName
                    </dd>

                    <dt>
                        登录名
                    </dt>

                    <dd>
                        @s.StuLoginName
                    </dd>

                    <dt>
                        密码
                    </dt>

                    <dd>
                        @s.StuLoginPwd
                    </dd>

                    <dt>
                        性别
                    </dt>

                    <dd>
                        @{ 
                            if (s.StuSex==true)
                            {
                                @:男
                            }
                            else
                            {
                                @:女
                            }
                        }
                    </dd>

                    <dt>
                        电话
                    </dt>

                    <dd>
                        @s.StuPhone
                    </dd>

                    <dt>
                        Email
                    </dt>

                    <dd>
                        @s.StuEmail
                    </dd>

                    <dt>
                        班级
                    </dt>

                    <dd>
                        @s.StuGrade
                    </dd>

                </dl>
            </div>
            <p>
                <a href="/Students/Edit/@s.StuID">编辑</a>  |
                <a href="/Students/Index">返回学生列表</a>
            </p>

           


