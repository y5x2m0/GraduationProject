
@{
    ViewBag.Title = "Buy";
}
@using T2_2.Models;
<h2>获得对象列表集合——买票</h2>
<form method="post" action="Buy">
    <div class="form-group">
        <input type="text" name="Person[0].Name" placeholder="输入姓名" />
        <input type="text" name="Person[0].IdCard" placeholder="输入身份证" />
        <input type="text" name="Person[0].PPhone" placeholder="输入电话号码" />
    </div>
    <div class="form-group">
        <input type="text" name="Person[1].Name" placeholder="输入姓名" />
        <input type="text" name="Person[1].IdCard" placeholder="输入身份证" />
        <input type="text" name="Person[1].PPhone" placeholder="输入电话号码" />
    </div>
    <div class="form-group">
        <input type="text" name="Person[2].Name" placeholder="输入姓名" />
        <input type="text" name="Person[2].IdCard" placeholder="输入身份证" />
        <input type="text" name="Person[2].PPhone" placeholder="输入电话号码" />
    </div>
    <input type="submit" value="登录" />
</form>
@if (ViewBag.List != null)
{
    foreach (var item in ViewBag.List as List<Person>)
    {
        <h3>@item.Name - @item.IdCard - @item.PPhone</h3>
    }
}
